@model IEnumerable<AmericaVirtual.Weather.Web.Models.WeatherForecast>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-center">SERVICIO DEL CLIMA</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center">Seleccioná la zona</h5>
                <hr>
                <form autocomplete="off">
                    <div class="form-group">
                        <label class="control-label">País</label>
                        <input class="form-control" placeholder="Selecciona un país" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ciudad</label>
                        <input class="form-control" placeholder="Selecciona una ciudad" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="BUSCAR" class="btn btn-danger btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center">Reporte del día</h5>
                <hr>
                <h6 class="card-subtitle mb-2 text-muted">Argentina</h6>
                <h6 class="card-subtitle mb-2 text-muted">Ciudad de Buenos Aires</h6>
                <div class="row">
                    <div class="col">
                        <h4>VIERNES</h4>
                        <h5>SOLEADO</h5>
                        <h1>22°C</h1>
                        <h6>71.6°F</h6>
                    </div>
                    <div class="col text-right">
                        <h6>Prob. de precipitaciones: 0%</h6>
                        <h6>Humedad: 54%</h6>
                        <h6>Viento: a 10 km/h</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card-group">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.Summary</h5>
                        <img class="card-img-top" src="..." alt="Card image cap">
                        <h6 class="card-text text-center">@item.TemperatureC°C</h6>
                        <h6 class="card-text text-center">@item.TemperatureF°F</h6>
                    </div>
                </div>
            }
        </div>
    </div>    
</div>

